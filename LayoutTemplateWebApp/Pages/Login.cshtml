@page
@model LayoutTemplateWebApp.Pages.Pages_Login
@{
    ViewData["Title"] = "Login";
}

<section class="container px-5 py-3" style="margin-top: 250px; margin-left: auto; margin-right: -100px;">
    <div class="row">
        <div class="col-md-6">
            <form>
                <div class="text-center">
                    
                    <div class="mb-3">
                        <label class="form-label">Correo</label>
                        <input type="text" class="form-control" id="inputName" placeholder="Correo" style="border: 5px solid #E6F2FB;">

                    </div>
                    <div class="mb-3">
                        <label class="form-label">Contraseña</label>
                        <input type="text" class="form-control" id="inputName" placeholder="Contraseña" style="border: 5px solid #E6F2FB">
                    </div>

                    <p>
                        <button type="button" style="background-color: #E6F2FB; border: none;" data-bs-toggle="modal" data-bs-target="#report">Ingresar</button>
                    </p>
                    <p>
                        <button type="button" style="background-color: #E6F2FB; border: none;" data-bs-toggle="modal" data-bs-target="#report">Crear Usuario</button>
                    </p>
                </div>
            </form>
        </div>
    </div>
</section>
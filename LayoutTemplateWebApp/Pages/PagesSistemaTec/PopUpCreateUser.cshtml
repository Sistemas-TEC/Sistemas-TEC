@page
@model LayoutTemplateWebApp.Pages.PagesSistemaTec.Pages_PagesSistemaTec_PopUpCreateUser
@{
    ViewData["Title"] = "Login";
}

<section class="container px-5 py-3" style="margin-top: 0px; margin-left: 10px; margin-right: auto;">
    <label style="form-label: 3rem;">
        Este aplicacion lo permite crear usuarios para estudiante, profesor y administrativo.
    </label>
    <div class="row">
        <div class="col-md-6">
            <form method="post">
                <p>
                    <button type="submit" style="background-color: #E6F2FB; border: none;" data-bs-toggle="modal" data-bs-target="#report">Crear Estudiante</button>
                </p>
                <p>
                    <button type="submit" style="background-color: #E6F2FB; border: none;" data-bs-toggle="modal" data-bs-target="#report">Crear Profesor</button>
                </p>
                <p>
                    <!-- crear página de crear usuarios -->
                    <button asp-page="Index" type="submit" style="background-color: #E6F2FB; border: none;" data-bs-toggle="modal" data-bs-target="#report">Crear Administrativo</button>
                </p>
                
            </form>
        </div>
    </div>
</section>
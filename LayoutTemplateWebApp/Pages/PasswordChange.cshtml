@page
@model LayoutTemplateWebApp.Pages.PasswordChangeModel
@{
    ViewData["Title"] = "Cambio de Contraseña";
}

<section class="container px-5 py-3" style="margin-top: 250px; margin-left: auto; margin-right: -100px;">
    <div class="row">
        <div class="col-md-6">
            <form method="post">
                <div class="text-center">

                    <div class="mb-3">
                        <label asp-for="@Model.OldPassword">Contraseña Actual</label>
                        <input asp-for="@Model.OldPassword" class="form-control" placeholder="Contraseña Actual" style="border: 5px solid #E6F2FB;">

                    </div>
                    <div class="mb-3">
                        <label asp-for="@Model.NewPassword" class="form-label">Nueva Contraseña</label>
                        <input asp-for="@Model.NewPassword" class="form-control" placeholder="Nueva Contraseña" style="border: 5px solid #E6F2FB">
                    </div>

                    <p>
                        <button type="submit" style="background-color: #E6F2FB; border: none;" data-bs-toggle="modal" data-bs-target="#report">Ingresar</button>
                    </p>
                    
                </div>
            </form>
        </div>
    </div>
</section>